macro io(value, slot, operation) block
	if operation==Waypoint_Load then
		value=slot
	else if operation==Waypoint_Save then
		slot=value
	end
end

macro string_read_until(out, str, seperator) block
    out = ""
    pop = ""
    while pop != seperator do
        string_pop(str,pop)
        out+= pop
    end
    pop = out
    out = ""
    string_reverse(pop, out)
end

