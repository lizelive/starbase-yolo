include "trig"
include "config"
include "std/logic"
include "std/math"

// resting position
:TargetZ=1000
:TargetX=0
:TargetY=0

logic_wait(not :Active)
t=0
while :Active do
    t+=Speed
    math_sin(x,t)
    x*=Scale*t
    math_cos(y,t)
    y*=Scale*t
    
    z=:RangeFinderDistance
    :TargetX=x
    :TargetY=y
    :TargetZ=z
end
