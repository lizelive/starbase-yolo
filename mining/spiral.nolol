include "../lib/trig"
include "config"
include "std/logic"
include "std/math"

// resting position
:TargetZ=1000
:TargetX=0
:TargetY=0

logic_wait(not :Active)	
t=0
while :Active do
    t+=Speed
    o=trig_mod(t)
    x=Scale*t*sin(o)
    y=Scale*t*cos(o)
    z=:RangeFinderDistance
    :TargetX=x
    :TargetY=y
    :TargetZ=z
end
