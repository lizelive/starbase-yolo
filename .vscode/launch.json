    "version": "0.2.0",
    "configurations": [
        {
            "type": "yodk",
            "request": "launch",
            "name": "Debug current script",
            "scripts": [
                "${relativeFile}"
            ],
            "workspace": "${workspaceFolder}"
        },
        {
            "type": "yodk",
            "request": "launch",
            "name": "Debug all scripts",
            "scripts": [
                "*.nolol",
                "*.yolol"
            ],
            "workspace": "${workspaceFolder}"
        },
        {
            "type": "yodk",
            "request": "launch",
            "name": "Debug current test",
            "test": "${relativeFile}",
            "workspace": "${workspaceFolder}"
        }
    ]
}