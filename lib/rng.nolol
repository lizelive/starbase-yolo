include "std/math"
include "std/logic"



seed=0

lcr_a=1381
lcr_b=3.241

macro lcg(seed)<lcr_a,lcr_b> block
	seed=seed*lcr_a+lcr_b
	seed=math_mod(seed,1)
end

// produce a random number between 0-1
// {21221.,8.527}->{1000,2.90652*^-31} 
macro rng(o)<seed,lcr_a,lcr_b> block
	lcg(seed)
	o=seed
end

rng(:x)