include "std/math"

// get the f part of a number
macro math_fpart(x) expr
	math_mod(x,1)
end

macro math_is_int(x) expr
	not math_fpart(x)
end

// is this number odd
macro math_is_odd(x) expr
	math_mod(x,2)
end

